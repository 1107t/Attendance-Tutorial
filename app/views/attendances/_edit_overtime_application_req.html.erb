<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
    </div> 
    <div class="modal-body">
     <%= form_with(model: @user, url: attendances_update_overtime_application_req_user_path(@user), local: true, method: :patch) do |f| %>
       
      <h3 class="modal-title">【残業申請】</h3>
         <table class="table table-bordered table-condensed table-hover" id="table-attendances">
          <thead>
          <tr>
            <th rowspan="1">日付</th>
            <th rowspan="1">曜日</th>
            <th colspan="5">終了予定時間</th>
            <th colspan="1">翌日</th>
            <th colspan="6">業務処理内容</th>
            <th colspan ='3'>支持者確認㊞</th>
          </tr>
          <tr>
            <th rowspan="2"></th>
            <th rowspan="2"></th>
            <th colspan="5"></th>
            <th colspan="1"></th>
            <th colspan='6'></th>
            <th colspan='3'></th>
          </tr>
          </thead>
          
          <tbody>
           <% @attendances = Attendance.where(user_id: @user, attendance_chg_status: "承認") %>       
            <% @attendances.each do |day| %>
            <%= f.fields_for "attendances[]", day do |attendance| %>
            <% css_class =
               case $days_of_the_week[day.worked_on.wday]
               when '土'
                "saturday_info"
               when '日'
                "sunday_info"
               end 
            %>
            
            <tr>
                <td><%= l(@date, format: :short) %></td>
                <td class = "<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
                <td><div class="field">
                 <%= f.datetime_select %>
                </div></td>
                <td><%= check_box_tag(:attendance_nextday) %></td>
                <td><%= day.note %></td>
                <td><%= attendance.select :attendance_chg_status, [["なし", "なし"],["申請中", "申請中"], ["承認", "承認"], ["否認", "否認"]], {selected: day.attendance_chg_status} %></td>
            </tr>
            <% end %>
           <% end %>  
          </tbody>  
         </table>
         
      <% end %>
    </div>  
  </div>
</div>
