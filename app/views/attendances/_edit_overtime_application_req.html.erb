<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
    </div> 
    <div class="modal-body">
     <%= form_with(model: @attendance, url: attendances_update_overtime_application_req_user_path(@user, date: @date), local: true, method: :patch) do |f| %>
      <div class="center">
      <h3 class="modal-title">【残業申請】</h3>
      </div>
         <table class="table table-bordered table-condensed table-hover" id="table-attendances">
          <thead>
          <tr>
            <th rowspan="1">日付</th>
            <th rowspan="1">曜日</th>
            <th colspan="5">終了予定時間</th>
            <th colspan="1">翌日</th>
            <th colspan="6">業務処理内容</th>
            <th colspan='3'>支持者確認㊞</th>
          </tr>
          
        
          </thead>
          
          <tbody>
            <% css_class =
               case $days_of_the_week[@date.wday]
               when '土'
                "saturday_info"
               when '日'
                "sunday_info"
               end 
            %>
          
          <tr>
            <td rowspan="2"><%= l(@date, format: :short) %></td>
            <td class = "<%= css_class %>"rowspan="2"><%= $days_of_the_week[@date.wday] %></td>
            <td colspan="5"><%= f.time_field :overtime_at, class: "form-control" %></td>
            <td colspan="1"><%= check_box_tag(:attendance_nextday) %></td>
            <td colspan='6'><%= f.text_field :overtime_note, class: "form-control" %></td>
            <td colspan='3'>
                <%= f.collection_select :new_instructor,@superiors, :name, :name, {include_blank: "選択して下さい"}, {require: true} %></td>
          </tr> 
          </tbody>  
         </table>
        <div class="center"> 
        <%= f.submit '更新を送信', class: "btn btn-lg btn-primary"%>
        </div>
      <% end %>
    </div>  
