<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td><%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-info" %>【<%= l(@first_day, format: :middle) %>】時間管理表
      <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-info" %></td>
      <td>指定勤務開始時間：<%= format_basic_info(@user.work_time) %> 
          指定勤務終了時間: <%= format_basic_info(@user.work_time) %></td>
      <td>基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>月初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>月末日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<% if current_user.superior %>
  <%= link_to "【所属長承認申請のお知らせ】", "#" %><br/>　
  <%= link_to "【勤怠変更申請のお知らせ】", attendances_show_attendance_chg_req_user_path, remote: true %>
  <% if  @attendance_chg_req_sum > 0 %>
  <span><%= @attendance_chg_req_sum %>件の通知があります。</span><br/>
  <% end %>
  <%= link_to "【残業申請のお知らせ】", "#" %><br/>　
<% end %>

<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
  <%= link_to "CSV出力", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
  <%= link_to "勤怠修正ログ(承認済み)", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
</div>
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">【所定外勤務】</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">支持者確認㊞</th>
      </tr>
      <tr> 
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    <tbody>
    <% @attendances.each do |day| %>
    <% css_class =
       case $days_of_the_week[day.worked_on.wday]
       when '土'
        "saturday_info"
       when '日'
        "sunday_info"
       end 
    %>
        <tr>
          <td><%= link_to "残業申請", attendances_edit_overtime_application_req_user_path(@user,date: day.worked_on), remote: true, class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class = "<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at.floor_to(15.minutes), format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minutes), format: :min) if day.started_at.present? %></td>
          <td>
            <% btn_text = attendance_state(day) %>
            <% if btn_text == "出勤" %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :min) if day.finished_at.present? %></td>
          <td><% if btn_text == "退勤" %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>  
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td>
            <% if day.attendance_chg_status == "申請中" %>
            <%= day.instructor %>さんへ申請中
            <% elsif day.attendance_chg_status == "承認" %>
            <%= day.instructor %>さんから承認されました。
            <% elsif day.attendance_chg_status == "否認" %>
            <%= day.instructor %>さんから否認されました。
            <% end %></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
        
      <tr>
        <td colspan="1"></td>
        <td colspan="1"></td>
        <td colspan="1"></td>
        <td colspan="6"></td>
        <td colspan="1"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="1"></td>
        <td colspan="4"></td>
        <td colspan="1"><%= form_with model: @user do |f| %>
        <%= f.select :faculty, [ ["経済学部", "経済学部"], ["法学部", "法学部"], ["医学部", "医学部"]], include_blank: "選択して下さい" %>
        <%= f.submit '送信'%>
      <% end %> </td>
      </tr>
      
    </tfoot>  
  </table>
</div>

<!-- モーダルウィンドウ表示 -->
 <div id="attendance_chg_req" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
 <div id="edit_overtime_application_req" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>